<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.cryptomanager_v2.ui.home.ui.portfolio.PortfolioFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_portfolio" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.cryptomanager_v2.ui.home.ui.markets.MarketsFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_markets" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.cryptomanager_v2.ui.home.ui.news.NewsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_news" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.cryptomanager_v2.ui.home.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" />

